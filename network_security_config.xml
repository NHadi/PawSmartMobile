<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP traffic to development server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">103.67.244.254</domain>
    </domain-config>

    <!-- Development configuration - allow cleartext for all domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>